{
  "compilerOptions": {
    "module": "ES2022",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": ["*", "*.ts"]
    },
    "esModuleInterop": true,
    "allowJs": true
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
