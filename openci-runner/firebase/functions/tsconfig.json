{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": false,
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2022",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "rootDir": "src",
  "compileOnSave": true,
  "include": [
    "src"
  ],
  "lib": [
    "ES2023"
  ],
  "types": [
    "node"
  ]
}