{
    "assist": {
        "actions": {
            "source": {
                "useSortedKeys": "on"
            }
        },
        "enabled": true
    },
    "files": {
        "includes": [
            "**",
            "!**/node_modules"
        ]
    },
    "linter": {
        "enabled": true,
        "rules": {
            "correctness": {
                "noUnusedImports": "error"
            },
            "recommended": true
        }
    }
}