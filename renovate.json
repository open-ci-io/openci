{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "timezone": "Asia/Tokyo",
    "schedule": [
        "before 9am on monday"
    ],
    "enabledManagers": [
        "pub"
    ],
    "packageRules": [
        {
            "matchManagers": [
                "pub"
            ],
            "matchFileNames": [
                "apps/*/pubspec.yaml",
                "packages/*/pubspec.yaml"
            ],
            "groupName": "Flutter/Dart dependencies",
            "automerge": false
        }
    ],
    "ignorePaths": [
        "**/node_modules/**",
        "**/android/**",
        "**/ios/**",
        "**/macos/**",
        "**/.github/**"
    ],
    "labels": [
        "dependencies"
    ],
    "prHourlyLimit": 2,
    "prConcurrentLimit": 10
}